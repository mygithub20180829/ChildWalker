<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
	
	<include layout="@layout/nav_bar"/>
	
	<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@mipmap/sunset"
			android:adjustViewBounds="true"/>
	
	<!--当前温度-->
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp">
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:src="@mipmap/thermometer"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="18sp"
				android:layout_marginLeft="30dp"
				android:layout_gravity="center_vertical"
				android:text="当前温度："/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical">
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="vertical">
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp">
					<TextView
							android:id="@+id/tv_temp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="18sp"
							android:text="25"
							android:textColor="#000000"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="18sp"
							android:textColor="#000000"
							android:layout_marginLeft="5dp"
							android:text="℃"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
	<!--当前湿度-->
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="20dp">
		<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginLeft="10dp"
				android:src="@mipmap/water"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="18sp"
				android:layout_marginLeft="15dp"
				android:layout_gravity="center_vertical"
				android:text="当前湿度："/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp">
			<TextView
					android:id="@+id/tv_hum"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:text="39"
					android:textColor="#000000"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:textColor="#000000"
					android:layout_marginLeft="5dp"
					android:text="RH"/>
		</LinearLayout>
	</LinearLayout>
	
	<!--空气质量-->
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="20dp">
		<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginLeft="10dp"
				android:src="@mipmap/leaf"/>
		<TextView
				android:id="@+id/tv_air_quality_main"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="18sp"
				android:layout_marginLeft="15dp"
				android:layout_gravity="center_vertical"
				android:text="空气质量："/>
		<TextView
				android:id="@+id/tv_air_quality"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
	</LinearLayout>
	
	<!--外部火源-->
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="20dp">
		<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginLeft="10dp"
				android:src="@mipmap/campfire"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="18sp"
				android:layout_marginLeft="15dp"
				android:layout_gravity="center_vertical"
				android:text="外部火源："/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp">
			<TextView
					android:id="@+id/tv_fire"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18sp"
					android:text="39"
					android:textColor="#000000"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>